<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:ignore="MissingPrefix">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_6sdp"
            android:gravity="center"
            android:minHeight="@dimen/_70sdp"
            app:cardCornerRadius="@dimen/_4sdp"
            app:cardElevation="@dimen/_1sdp"
            app:cardPreventCornerOverlap="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_marginRight="@dimen/_8sdp"
                android:paddingTop="@dimen/_4sdp"
                android:paddingBottom="@dimen/_4sdp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:text="Name:"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/patientlist_label_text"
                        android:textStyle="bold"
                        android:visibility="gone" />
                    <TextView
                        android:id="@+id/txt_first_name"
                        style="@style/TextMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:text="bcbc"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/_12sdp" />
                    <LinearLayout
                        android:id="@+id/ll_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:minWidth="@dimen/_60sdp"
                        android:minHeight="@dimen/_20sdp"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/txt_order_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text=""
                            android:textColor="@color/white"
                            android:textSize="@dimen/_10sdp" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:orientation="horizontal"
                    android:weightSum="2">
                    <LinearLayout
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/txt_drug"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="bcdfdfbfhfghghghgjjjjjjghjgjghjghjjjjjjjjjjjjgjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjgjhjjj"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/patientlist_value_text"
                            android:visibility="visible" />
                        <TextView
                            android:layout_marginTop="@dimen/_1sdp"
                            android:id="@+id/txt_updated_on"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="bcbc"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/patientlist_value_text" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0px"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_marginLeft="@dimen/_8sdp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:background="@drawable/ic_circle_grey"
                            android:gravity="center">
                            <ImageView
                                android:id="@+id/img_prescription"
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:layout_gravity="center"
                                android:padding="@dimen/_3sdp"
                                android:layout_margin="@dimen/_3sdp"
                                android:src="@drawable/prescription"
                                android:visibility="gone" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_marginLeft="@dimen/_8sdp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/ic_circle_grey"
                            android:gravity="center">
                            <ImageView
                                android:id="@+id/img_signature"
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:layout_gravity="center"
                                android:layout_margin="@dimen/_3sdp"
                                android:padding="@dimen/_3sdp"
                                android:src="@drawable/ic_signature"
                                android:visibility="visible" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_marginLeft="@dimen/_8sdp"
                            android:visibility="visible"
                            android:id="@+id/ll_img_picture"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/ic_circle_grey"
                            android:gravity="center">
                            <ImageView
                                android:layout_margin="@dimen/_3sdp"
                                android:id="@+id/img_picture"
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:layout_gravity="center"
                                android:padding="@dimen/_3sdp"
                                android:src="@drawable/ic_picture"
                                android:visibility="visible" />
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/img_delete"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:src="@drawable/ic_delete_black"
                            android:layout_marginLeft="@dimen/_3sdp"
                            android:visibility="gone" />
                    </LinearLayout>
                </LinearLayout>

                <TextView

                    android:layout_marginTop="@dimen/_1sdp"
                    android:id="@+id/txt_qty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/patientlist_value_text" />



            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>




